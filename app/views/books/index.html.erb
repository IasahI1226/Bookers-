<h1>Bookers</h1>
<table>
  <p>Title</p>
  <p>Body</p>
  <% @books.each do |book| %>
      <span>
      <%= book.title %>
      <%= book.body %>
      <%= link_to "Show", book_path(book) %>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </span>
  <% end %>
</table>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>